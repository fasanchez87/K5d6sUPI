<?xml version="1.0" encoding="utf-8"?>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activity.Pago"
       >

    <LinearLayout
        android:orientation="vertical"
        android:layout_above="@+id/rlDetalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLetraFondoEstrellado"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/linearDetalleAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rlDetalle"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/appBarDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <ImageView
                        android:id="@android:id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:focusable="false"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_logo_bar_kupi" />

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/llDetalle">

            <ImageView
                android:id="@+id/imagenEmpresaDetalleEmpresa"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/xssdsad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="3dp"
                android:text="Empresa"
                android:paddingTop="30dp"
                android:textColor="@color/colorGrisTextCollpser"
                android:textSize="19sp"
                />

            <TextView
                android:id="@+id/editTextNomEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:textColor="@color/colorNegro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Ingeniapps"
                />

            <TextView
                android:id="@+id/editTextNombrddeDetalleEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="3dp"
                android:text="Referencia"
                android:paddingTop="8dp"
                android:textColor="@color/colorGrisTextCollpser"
                android:textSize="19sp"
                />
            <TextView
                android:id="@+id/editTextReferenciaPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:textColor="@color/colorNegro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="12232323"
                />
            <TextView
                android:id="@+id/editTsdasdextNombreDetalleEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="3dp"
                android:text="Valor Pago"
                android:paddingTop="5dp"
                android:textColor="@color/colorGrisTextCollpser"
                android:textSize="19sp"
                />
            <TextView
                android:id="@+id/editTextValorPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:textColor="@color/colorNegro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="100,000"
                />
            
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <EditText
                android:id="@+id/editTextCedulaPago"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/style_editext_cuadrangular_fondo_oscuro"
                android:gravity="top"
                android:hint="Número de Identificación"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorNegro"
                android:textColorHint="@color/colorNegro"
                android:theme="@style/EditTextFondoBlanco"/>

            <EditText
                android:id="@+id/editTextClavePago"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/style_editext_cuadrangular_fondo_oscuro"
                android:gravity="top"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorNegro"
                android:textColorHint="@color/colorNegro"
                android:theme="@style/EditTextFondoBlanco"/>

            <Button
                android:id="@+id/botonConfirmarPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:textAllCaps="false"
                android:background="@drawable/button_pago"
                android:text="Confirmar Pago"
                android:visibility="gone"
                android:textColor="@color/colorBlanco" />

            <Button
                android:id="@+id/botonConfirmarPagoDisable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:enabled="false"
                android:textAllCaps="false"
                android:background="@drawable/button_pago_disable"
                android:text="Confirmar Pago"
                android:textColor="@color/colorBlanco" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>