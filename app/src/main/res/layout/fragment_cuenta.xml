<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ingeniapps.dicmax.fragment.Categorias">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/linearHabilitarPagos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F0EEF5"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.ingeniapps.dicmax.Text.FontStylerView
                        android:id="@+id/etbono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:text="Bono"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        app:fontName="AvenirLTStd-Black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                        app:layout_constraintVertical_bias="0.904"
                        android:layout_below="@+id/progressBar"
                        android:layout_centerInParent="true"
                        android:gravity="left"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorAzulDicmax"
                        />

                    <com.ingeniapps.dicmax.Text.FontStylerView
                        android:id="@+id/editTextCupoBono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        app:fontName="AvenirLTStd-Light"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                        app:layout_constraintVertical_bias="0.904"
                        android:layout_below="@+id/progressBar"
                        android:layout_centerInParent="true"
                        android:gravity="left"
                        android:paddingTop="5dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorNegro"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.ingeniapps.dicmax.Text.FontStylerView
                        android:id="@+id/etcupo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:text="Cupo"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        app:fontName="AvenirLTStd-Black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                        app:layout_constraintVertical_bias="0.904"
                        android:layout_below="@+id/progressBar"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorAzulDicmax"
                        />

                    <com.ingeniapps.dicmax.Text.FontStylerView
                        android:id="@+id/editTextCupo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        app:fontName="AvenirLTStd-Light"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                        app:layout_constraintVertical_bias="0.904"
                        android:layout_below="@+id/progressBar"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorNegro"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.ingeniapps.dicmax.Text.FontStylerView
                        android:id="@+id/etTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:text="Total"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        app:fontName="AvenirLTStd-Black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                        app:layout_constraintVertical_bias="0.904"
                        android:layout_below="@+id/progressBar"
                        android:layout_centerInParent="true"
                        android:gravity="right"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorAzulDicmax"
                        />

                    <com.ingeniapps.dicmax.Text.FontStylerView
                        android:id="@+id/editTextTotalCupo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        app:fontName="AvenirLTStd-Light"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                        app:layout_constraintVertical_bias="0.904"
                        android:layout_below="@+id/progressBar"
                        android:layout_centerInParent="true"
                        android:gravity="right"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorNegro"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="25dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <com.ingeniapps.dicmax.Text.FontStylerView
                    android:id="@+id/etname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:text="Nombre"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    app:fontName="AvenirLTStd-Black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintVertical_bias="0.904"
                    android:layout_below="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorAzulDicmax"
                    />

                <com.ingeniapps.dicmax.Text.FontStylerView
                    android:id="@+id/editTextNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    app:fontName="AvenirLTStd-Light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintVertical_bias="0.904"
                    android:layout_below="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorNegro"
                    />

                <com.ingeniapps.dicmax.Text.FontStylerView
                    android:id="@+id/etcedula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:text="Cédula"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    app:fontName="AvenirLTStd-Black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintVertical_bias="0.904"
                    android:layout_below="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorAzulDicmax"
                    />

                <com.ingeniapps.dicmax.Text.FontStylerView
                    android:id="@+id/editTextCedula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    app:fontName="AvenirLTStd-Light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintVertical_bias="0.904"
                    android:layout_below="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorNegro"
                    />

                <com.ingeniapps.dicmax.Text.FontStylerView
                    android:id="@+id/etceluar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:text="Celular"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    app:fontName="AvenirLTStd-Black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintVertical_bias="0.904"
                    android:layout_below="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorAzulDicmax"
                    />

                <com.ingeniapps.dicmax.Text.FontStylerView
                    android:id="@+id/editTextCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    app:fontName="AvenirLTStd-Light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintVertical_bias="0.904"
                    android:layout_below="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorNegro"
                    />

                <com.ingeniapps.dicmax.Text.FontStylerView
                    android:id="@+id/etemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    app:fontName="AvenirLTStd-Black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintVertical_bias="0.904"
                    android:layout_below="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorAzulDicmax"
                    />

                <com.ingeniapps.dicmax.Text.FontStylerView
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    app:fontName="AvenirLTStd-Light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintVertical_bias="0.904"
                    android:layout_below="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:text="sdsdsdsdsd"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorNegro"
                    />

                <com.ingeniapps.dicmax.Text.FontStylerView
                    android:id="@+id/comPagos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:text="Ver compromisos de pago..."
                    android:textStyle="bold"
                    android:textSize="17dp"
                    app:fontName="AvenirLTStd-Black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintVertical_bias="0.904"
                    android:layout_below="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorVerde"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="bottom"
                android:paddingBottom="0dp">

                <Button
                    android:id="@+id/buttonCambioClave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:background="@drawable/button_verde"
                    android:text="Cambiar Contraseña"
                    android:textColor="@color/colorBlanco" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/layoutMacroEsperaCuenta">

        <RelativeLayout
            android:id="@+id/layoutEsperaCategorias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:indeterminateTint="@color/colorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:paddingTop="4dp"
                android:text="Un momento..."
                android:textSize="18sp"
                />

        </RelativeLayout>

    </RelativeLayout>




    </FrameLayout>
