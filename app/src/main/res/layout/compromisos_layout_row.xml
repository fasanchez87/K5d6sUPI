<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingRight="7dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:background="#F0EEF5">

            <com.ingeniapps.dicmax.Text.FontStylerView
                android:id="@+id/asas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:gravity="right"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="3dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                app:fontName="AvenirLTStd-Light"/>

            <com.ingeniapps.dicmax.Text.FontStylerView
                android:id="@+id/sdfsdfsdfsdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="5dp"
                android:paddingRight="3dp"
                android:paddingTop="5dp"
                android:text="Valor:"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="bold"
                app:fontName="AvenirLTStd-Light" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingRight="7dp"
            android:layout_weight="3">

            <com.ingeniapps.dicmax.Text.FontStylerView
                android:id="@+id/fecCompro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03/03/2018"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:textSize="15dp"
                app:fontName="AvenirLTStd-Light"
                />

            <com.ingeniapps.dicmax.Text.FontStylerView
                android:id="@+id/valPendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23.980"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorNegro"
                android:textSize="15dp"
                app:fontName="AvenirLTStd-Light"
                />

            <TextView
                android:id="@+id/descEmpresa"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:maxLength="35"
                android:text="Joyerias y kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.5">

            <com.ingeniapps.dicmax.Text.FontStylerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="@drawable/rounded_textview_verde"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/numDiasVerde"
                app:fontName="AvenirLTStd-Light"
                android:visibility="visible"/>

            <com.ingeniapps.dicmax.Text.FontStylerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="@drawable/rounded_textview_rojo"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/numDiasRojo"
                app:fontName="AvenirLTStd-Light"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

