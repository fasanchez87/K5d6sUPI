<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="0dp"
            android:paddingRight="11dp"
            android:paddingTop="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="1dp"
                android:paddingRight="0dp"
                android:visibility="visible"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imagenEmpresa"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:scaleType="fitCenter"
                    card_view:srcCompat="@drawable/ic_search" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="11dp">

                <com.ingeniapps.dicmax.Text.FontStylerView
                    android:id="@+id/nombreEmpresaRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="3dp"
                    android:text="Deportes"
                    android:textStyle="bold"
                    android:textColor="@color/colorNegro"
                    android:textSize="15dp"
                    app:fontName="AvenirLTStd-Light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintVertical_bias="0.904" />

                <com.ingeniapps.dicmax.Text.FontStylerView
                    android:id="@+id/direccionEmpresaRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="1dp"
                    android:text="Carrera 46 30-71"
                    android:textStyle="bold"
                    android:textColor="@color/colorVerde"
                    android:textSize="12dp"
                    app:fontName="AvenirLTStd-Light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintVertical_bias="0.904" />

                <TextView
                    android:id="@+id/descEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:maxLength="35"
                    android:text="Joyerias y kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!--
        </android.support.v7.widget.CardView>
    -->

</LinearLayout>