<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="11dp"
            android:paddingTop="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="1dp"
                android:paddingRight="0dp"
                android:visibility="visible"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imagenEmpresa"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    card_view:srcCompat="@drawable/ic_search" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="11dp">

                <TextView
                    android:id="@+id/nombreEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="CENTROAGUAS SA ESP"
                    android:textColor="@color/colorNegro"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/direccionEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="Carrera 46 30-71"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/descEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:maxLength="35"
                    android:text="Joyerias y kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!--
        </android.support.v7.widget.CardView>
    -->

</LinearLayout>