<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ingeniapps.dicmax.fragment.Contacto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlanco"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="7dp"
        android:paddingTop="20dp"
        android:weightSum="1">

        <com.ingeniapps.dicmax.Text.FontStylerView
            android:id="@+id/comPagos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:text="Formulario de Contacto"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingLeft="3dp"
            app:fontName="AvenirLTStd-Black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo"
            app:layout_constraintVertical_bias="0.904"
            android:layout_below="@+id/progressBar"
            android:layout_centerInParent="true"
            android:gravity="left"
            android:paddingTop="5dp"
            android:paddingBottom="20dp"
            android:textColor="@color/colorVerde"
            />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_editTextNombreContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorEditTextGris"
            android:layout_gravity="center"
            android:theme="@style/TextLabelInputLayout"
            android:gravity="center"
            android:textColorHint="@color/colorEditTextGris">

            <EditText
                android:id="@+id/editTextNombreContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTextGris"
                android:hint="Nombre Completo"
                android:inputType="text"
                android:shadowColor="@color/colorEditTextGris"
                android:textColor="@color/colorEditTextGris"
                android:textColorHint="@color/colorEditTextGris"
                android:theme="@style/EditTextFondoBlanco" />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_clave_editTextEmailContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorEditTextGris"
            android:layout_gravity="center"
            android:theme="@style/TextLabelInputLayout"
            android:gravity="center"
            android:textColorHint="@color/colorEditTextGris">

            <EditText
                android:id="@+id/editTextEmailContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTextGris"
                android:hint="Correo Electrónico"
                android:inputType="textEmailAddress"
                android:shadowColor="@color/colorEditTextGris"
                android:textColor="@color/colorEditTextGris"
                android:textColorHint="@color/colorEditTextGris"
                android:theme="@style/EditTextFondoBlanco" />

        </android.support.design.widget.TextInputLayout>





        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_clave_editTextCelularContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorEditTextGris"
            android:layout_gravity="center"
            android:theme="@style/TextLabelInputLayout"
            android:gravity="center"
            android:textColorHint="@color/colorEditTextGris">

            <EditText
                android:id="@+id/editTextCelularContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTextGris"
                android:hint="Número de Teléfono"
                android:inputType="number"
                android:shadowColor="@color/colorEditTextGris"
                android:textColor="@color/colorEditTextGris"
                android:textColorHint="@color/colorEditTextGris"
                android:theme="@style/EditTextFondoBlanco" />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_editTextMensajeContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorEditTextGris"
            android:layout_gravity="center"
            android:theme="@style/TextLabelInputLayout"
            android:gravity="center"
            android:textColorHint="@color/colorEditTextGris">

            <EditText
                android:id="@+id/editTextMensajeContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorEditTextGris"
                android:hint="Mensaje"
                android:inputType="textMultiLine"
                android:shadowColor="@color/colorEditTextGris"
                android:textColor="@color/colorEditTextGris"
                android:textColorHint="@color/colorEditTextGris"
                android:theme="@style/EditTextFondoBlanco" />

        </android.support.design.widget.TextInputLayout>



    </LinearLayout>


</FrameLayout>
